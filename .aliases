# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# git
alias gci="git pull --rebase && rake && git push"
alias ggrep="git grep --break --heading -n"

# Neovim
alias vi="nvim"
alias vim="nvim"
alias vimdiff="nvim -d"

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"
alias cuc="bundle exec cucumber"

# Rails
alias be="bundle exec"
alias rake="noglob rake"
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias z="zeus"

alias reload!='. ~/.zshrc'

alias git='hub'
alias gtidy='git remote prune origin && git branch --merged master | egrep -v "master|develop$" | xargs git branch -d'

alias sync_upstream='git checkout develop && git fetch upstream && git rebase upstream/develop && git push --force-with-lease origin develop'
